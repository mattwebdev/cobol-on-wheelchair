{
  "name": "cobol-on-wheelchair",
  "version": "1.0.0",
  "description": "A modern web framework for COBOL with Node.js server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cobc -Wall -x -free cow.cbl engine/cowtemplate.cbl engine/cowtemplateplus.cbl httphandler.cbl controllers/*.cbl -o the.cow",
    "build:watch": "nodemon --watch '**/*.cbl' --exec 'npm run build'",
    "build:docker": "docker build -t cobol-on-wheelchair .",
    "test": "jest",
    "clean": "rm -f the.cow"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azac/cobol-on-wheelchair"
  },
  "keywords": [
    "cobol",
    "web",
    "framework",
    "nodejs",
    "express"
  ],
  "author": "Adrian Zandberg",
  "license": "MIT"
} 